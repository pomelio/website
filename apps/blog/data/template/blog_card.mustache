<a href="/blog/{{markdown_file}}" class="rounded my-3 bg-white border-gray-200 shadow-md overflow-hidden relative hover:shadow-lg hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    {{#is_player_card}}
      <img class="h-32 sm:h-48 w-full object-cover" src="{{{image_url}}}" alt="{{title}}">
    
    {{/is_player_card}}
    {{#is_summary_image_card}}
      <img class="h-32 sm:h-48 w-full object-cover" src="{{{image_url}}}" alt="{{title}}">
    {{/is_summary_image_card}}
    <div class="m-4">
      <span class="font-bold dark:text-white">{{title}}</span>
      <span class="block text-gray-500 text-sm">{{description}}</span>
    </div>
</a>
